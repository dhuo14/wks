<%= grid(@article, show_filters: :when_filtered) do |g|
   g.action_column
  g.column name:  'ID', attribute: 'id'
  g.column name:  '标题', attribute: 'title'
  g.column  :name => '作者', :model => 'User', :attribute => 'name' do |task|
    task.author.name if task.author
  end

  g.column  name:  '状态', attribute: 'status',:custom_filter => Dictionary.status.articles do |task|
    status_cn task
  end
  g.column name:  '时间', attribute: 'created_at'
  g.column do |task|
    oprate_btn(task)
  end
end -%>