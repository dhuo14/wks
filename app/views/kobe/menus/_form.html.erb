<div class='box-content'>
	<%= simple_form_for [:kobe, @menu], :html => { :multipart => true } do |f| %>

	  <%= f.input :parent_id, as: :hidden, :input_html => { :value => params[:format] } %>

		<%= f.input :name, label: '名称', placeholder: '名称', input_html: { 'data-rule-required' => 'true' } %>

		<%= f.input :url, label: 'URL', placeholder: 'URL', hint: '相对路径' %>

		<%= f.input :status, label: '状态', as: :my_radio_buttons, collection: [['有效','1'],['无效','0']] %>

		<%= f.input :sort, label: '排序号', placeholder: '只能填数字', input_html: { 'data-rule-number' => 'true', 'data-rule-required' => 'true' } %>

		<%= f.input :icon, label: '图标', as: :box_select, placeholder: '图标', input_html: { 'data-rule-required' => 'true' } %>

		<%= f.button :submit %>
	<% end %>
</div>

<%= box_select('menu_icon',@icon,'radio') %>